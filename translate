    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
   //لو فرانكو ححولها لانجلش وبعدين اترجمها 
        
 if(TextArea.getText().contains("2")||TextArea.getText().contains("3")||TextArea.getText().contains("4")
         ||TextArea.getText().contains("5")||TextArea.getText().contains("6")
         ||TextArea.getText().contains("7")||TextArea.getText().contains("8")||TextArea.getText().contains("9")
         ||TextArea.getText().contains("SMS")||TextArea.getText().contains("sms")||TextArea.getText().contains("isa")
         ||TextArea.getText().contains("ISA")){       
        
           String translatee=  TextArea.getText();
           for(int i=0;i<translatee.length();i++){
if (translatee.contains("2")){
 String a=translatee.replace("2", "a");
turned.setText(a);

}else if (translatee.contains("3")){
 String a=translatee.replace("3", "a");
turned.setText(a);
}else if (translatee.contains("3'")){
 String a=translatee.replace("3'", "gh");
turned.setText(a);
}else if(translatee.contains("6")){
 String a=translatee.replace("6", "t");
turned.setText(a);
}else if(translatee.contains("4")){
 String a=translatee.replace("4", "sh");
turned.setText(a);
} else if(translatee.contains("7")){
 String a=translatee.replace("7", "h");
turned.setText(a);
}else if(translatee.contains("5")){
 String a=translatee.replace("5", "kh");
turned.setText(a);
}else if(translatee.contains("8")){
 String a=translatee.replace("8", "k");
turned.setText(a);
}else if(translatee.contains("9")){
 String a=translatee.replace("9", "s");
turned.setText(a);
}else if(translatee.contains("SMS")||translatee.contains("sms")){
String a=translatee.replace("SMS", "رساله نصيه قصيره");
turned.setText(a);
}else if(translatee.contains("ISA")||translatee.contains("isa")){
String a=translatee.replace("ISA", "ان شاء الله");
turned.setText(a);
}else if(translatee.contains("CU")){
String a=translatee.replace("CU", "اراك لاحقا");
turned.setText(a);
}

           }
          
   Translator translate = Translator.getInstance();
         String texte = translate.translate(turned.getText(), Language.ENGLISH, Language.ARABIC);
         value.setText(texte); 
         //لو انجلش يترجم علطول 
 }else{
 
   Translator translate = Translator.getInstance();
         String text = translate.translate(TextArea.getText(), Language.ENGLISH, Language.ARABIC);
         value.setText(text);
 
 }
           
           
         //===================================================================
   
        //======================================================================
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
   
        Audio audio = Audio.getInstance();
        InputStream sound = null;
        try {
            sound = audio.getAudio("I am a ahmed", Language.ENGLISH);
        } catch (IOException ex) {
            Logger.getLogger(Trans.class.getName()).log(Level.SEVERE, null, ex);
        }
        try {
            audio.play(sound);
        } catch (JavaLayerException ex) {
            Logger.getLogger(Trans.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

